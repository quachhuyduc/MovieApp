<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_botron"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:id="@+id/llAccount"
           android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_110sdp"
            android:layout_marginLeft="132dp"
            android:src="@drawable/_0"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            />
            <TextView
                android:id="@+id/nameUser"
                android:layout_width="match_parent"
                android:layout_height="28dp"


                android:layout_alignParentTop="true"
                android:textSize="@dimen/_15sdp"
                android:text="puerto_rico"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/emailUser"
                android:layout_width="match_parent"
                android:layout_height="28dp"


                android:layout_alignParentTop="true"
                android:textSize="@dimen/_15sdp"
                android:text="puerto_rico"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

    </LinearLayout>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:layout_marginTop="290dp"
        android:elevation="@dimen/_50sdp">

        <LinearLayout
             android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"

         >
            <TextView
                android:id="@+id/edt_edit_profile"
                android:text="Edit Profile Information"
                android:textSize="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Notification"
                android:textSize="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Language"
                android:textSize="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:layout_marginTop="450dp"
        android:elevation="@dimen/_50sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"

            >
            <TextView
                android:text="Security"
                android:textSize="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Theme"
                android:textSize="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Privacy policy"
                android:textSize="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSignOut"
        android:background="@color/orange"
        android:text="SIGN OUT"
        android:textSize="@dimen/_20sdp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="@dimen/_500sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</FrameLayout>